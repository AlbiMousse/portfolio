
<div
  class="min-h-screen flex items-center justify-center text-center flex-col gap-4"
  data-fade-target="item"
  >
  <h1 class="text-6xl font-semibold tracking-tight mb-6 w-full text-left">
    <%= t("experience.title") %>
  </h1>
  <div
    data-controller="accordion"
    data-accordion-open="<%= item[:open] || false %>"
    class="w-full relative flex items-center justify-center text-center"
  >
    <div
      class="w-full
              rounded-xl
              bg-white/5
            border-t border-white/10
            backdrop-blur-md
            transition-colors duration-300
            hover:from-white/[0.08]"
    >
      <button
        type="button"
        data-action="click->accordion#toggle"
        class="w-full flex justify-between items-start
              px-8 md:px-16 py-4
              text-left"
      >
        <div class="flex-1">
          <h3 class="text-2xl md:text-3xl font-semibold text-white mb-3">
            <%= item[:title] %>
          </h3>

          <div class="flex flex-col gap-2 text-sm text-gray-400">
            <div class="flex gap-6">
              <% if item[:company_url] %>
                <a 
                  href="<%= item[:company_url] %>"
                  target="_blank"
                  rel="noopener noreferrer"
                  onClick="event.stopPropagation()"
                  class="hover:text-white transition-colors"
                >
                  <%= item[:company] %>
                </a>
              <% else %>
                <span><%= item[:company] %></span>
              <% end %>
              <span><%= item[:location] %></span>
            </div>
          </div>
        </div>

        <div class="flex flex-col items-end gap-3 ml-6">
          <span class="text-sm text-gray-400"><%= item[:date] %></span>
          <div
            data-accordion-target="toggle"
            class="w-6 h-6 flex items-center justify-center
                  text-white/60
                  transition-transform duration-300"
          >
            <svg viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6">
              <path
                fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
          </div>
        </div>
      </button>

      <div class="h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>

      <div
        data-accordion-target="content"
        class="hidden overflow-hidden
              max-h-0 opacity-0
              transition-all duration-500 ease-in-out"
      >
        <div class="px-8 md:px-16 py-10">
          <div class="max-w-4xl text-gray-300 leading-relaxed whitespace-pre-line text-left">
            <%= item[:description] %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>